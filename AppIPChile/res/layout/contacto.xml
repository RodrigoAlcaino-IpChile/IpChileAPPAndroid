<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget48"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="293dp"
        android:layout_y="458dp"
        android:onClick="Back"
        android:text="Back" />

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="210dp"
        android:layout_y="459dp"
        android:text="Enviar" />

    <EditText
        android:id="@+id/etMensaje"
        android:layout_width="335dp"
        android:layout_height="120dp"
        android:layout_x="24dp"
        android:layout_y="332dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textColor="@color/Yellow"
        android:textColorHint="@color/Yellow" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="26dp"
        android:layout_y="305dp"
        android:text="Mensaje"
        android:textColor="@color/Yellow" />

    <TextView
        android:id="@+id/tvSeleccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="27dp"
        android:layout_y="266dp"
        android:text="Asunto:"
        android:textColor="@color/Yellow" />

    <EditText
        android:id="@+id/etAsunto"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_x="85dp"
        android:layout_y="250dp"
        android:ems="10"
        android:textColor="@color/Yellow"
        android:textColorHint="@color/Yellow" >

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="360dp"
        android:layout_height="237dp"
        android:layout_x="13dp"
        android:layout_y="0dp"
        android:src="@drawable/topcn" />

</AbsoluteLayout>
